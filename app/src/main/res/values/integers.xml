<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- percentage padding to use when exploding a cluster -->
    <integer name="cluster_explode_padding_percent">20</integer>

    <!-- Zoom on original map view if nothing is stored for context -->
    <integer name="prefs_map_location_zoom_default">0</integer>

    <!-- Zoom when showing a member's location -->
    <integer name="map_showuser_zoom">15</integer>

    <!-- If the zoom is below this number, we won't try to load hosts and will emit a message saying that -->
    <integer name="map_zoom_min_load">7</integer>

    <!-- Clusters won't be formed below this size - individual pins will be used -->
    <integer name="min_cluster_size">10</integer>

    <!-- This is just a plugin to the WSNonHierarchical clustering algo to fine-tune clustering -->
    <!-- See WSNonHierarchicalDistanceBasedAlgorithm -->
    <integer name="map_algo_max_distance_at_zoom">80</integer>

    <!-- The AVD cannot work/stay connected if no network, so this is a workaround for debugging -->
    <bool name="simulate_network_disconnected">false</bool>

    <integer name="prefs_message_refresh_interval_min_default">5</integer>
    <bool name="prefs_dev_simulate_no_network_default">false</bool>
</resources>
