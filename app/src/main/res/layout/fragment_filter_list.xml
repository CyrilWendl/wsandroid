<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_weight="0.35"
                android:text="@string/filter_last_access"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/last_access_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_weight="0.65"
                android:textSize="20sp" />
        </LinearLayout>
        <SeekBar
            android:id="@+id/last_access_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:gravity="start"
                android:text="@string/filter_currently_available"
                android:textSize="20sp"
                android:textStyle="bold" />
            <CheckBox
                android:id="@+id/currently_available_checkbox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:gravity="start" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:gravity="start"
                android:text="@string/filter_favorite_host"
                android:textSize="20sp"
                android:textStyle="bold" />
            <CheckBox
                android:id="@+id/favorite_host_checkbox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:gravity="start" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_clear_filters"
        style="@style/button_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/minimum_height_touch_target"
        android:text="@string/button_clear_filters"
        android:theme="@style/button_primary_raised" />
</LinearLayout>
