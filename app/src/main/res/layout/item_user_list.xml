<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/user_list_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7dp">

    <fi.bitrite.android.ws.ui.widget.UserCircleImageView
        android:id="@+id/user_list_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_list_lbl_fullname"
            style="@style/WsText.subHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/user_list_lbl_location"
            style="@style/WsText.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/user_list_lbl_member_info"
            style="@style/WsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            tools:text="Member since January 1, 2015. Last active 3 weeks ago."
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>
</LinearLayout>
