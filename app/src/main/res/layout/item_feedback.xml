<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/feedback_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:layout_marginTop="7dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feedback_lbl_sender"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:maxLines="1"
            android:textSize="15sp"
            tools:text="@tools:sample/full_names" />

        <Space
            android:layout_width="4dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/feedback_img_relation_and_rating"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:importantForAccessibility="yes"
            android:tint="#ff009900"
            android:tooltipText="@string/feedback_relation_long_host"
            app:srcCompat="@drawable/ic_bicycle_white_24dp" />

        <Space
            android:layout_width="4dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/feedback_lbl_meetingDate"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="15sp"
            tools:text="Dec '18" />
    </LinearLayout>

    <TextView
        android:id="@+id/feedback_lbl_body"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:maxLines="5"
        tools:text="@tools:sample/lorem/random" />

</LinearLayout>
